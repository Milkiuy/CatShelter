<Page x:Class="CatShelter.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CatShelter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин" Width="100"/>
                <TextBox x:Name="LoginTxt"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль:" Width="100"/>
                <PasswordBox x:Name="PassTxt"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnGuest" Content="Войти как гость" Click="BtnGuest_Click"/>
                <Button x:Name="BtnLogin" Content="Войти" Click="BtnLogin_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
